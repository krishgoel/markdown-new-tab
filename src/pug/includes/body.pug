.container.flex

    section.main.flex.noblur

        textarea(autofocus spellcheck="false")

        .markdown-body.nodisplay

        .buttons.flex.noselect

            .button#edit
                img(src="/static/svg/edit.svg").nodrag

            .button#save
                img(src="/static/svg/save.svg").nodrag

    section.history.flex.nodisplay

        .header.flex

            h1 Revision History

            .noselect.close#closeHistory
                img(src="/static/svg/close.svg").nodrag

        .list

    section.settings.flex.nodisplay

        .header.flex

            h1 Settings

            .noselect.close#closeSettings
                img(src="/static/svg/close.svg").nodrag

        .body.noselect

            .item.flex(data-setting='saveHistory')

                .main.flex
                    label Save Revision History
                    p
                        | If disabled, saving of revision history will be paused.
                        br
                        | Saved revisions will still be viewable.

                .switch.flex
                    .box

            .item.flex(data-setting='cursorLastPosition')

                .main.flex
                    label Save Cursor Position
                    p Start editing where you left off last time you saved the document. If disabled, cursor is always positioned at the start.

                .switch.flex
                    .box

            .item.flex(data-setting='returnKeyToggle')

                .main.flex
                    label Use ⌘/^ + ↵ for editing and saving
                    p Instead of saving and editing with ⌘/^ + S and ⌘/^ + X respectively, use ⌘/^ + ↵ (return/enter key) for toggling edit and save modes.

                .switch.flex
                    .box

            .item.flex(data-setting='enablePowerMode')

                .main.flex
                    label Enable POWER MODE
                    p When typing, display animated particles thrown out from the cursor

                .switch.flex
                    .box

            .item.dateFormat.flex(data-setting='dateFormat')

                .main.flex
                    label Date Format
                    p Customise date/time format to be displayed on the bottom of the window. Refer to 
                        a(href='https://github.com/felixge/node-dateformat#mask-options') this table
                        | &nbsp;to see how to properly format (refresh page to see the changes)
                    form
                        input(type='text' name='dateFormat' placeholder='dd/mm/yyyy - HH:MM:ss')
                        input(type='submit' name='submit' value='Save')

            .item.customCss.flex(data-setting='customCss')

                .main.flex
                    label Custom CSS
                    p Add custom CSS that will override current page styles
                    form
                        textarea(name='dateFormat' placeholder='Custom CSS' rows=5)
                        input(type='submit' name='submit' value='Save')

